<!DOCTYPE html>
<html lang="en">

    <head>
        <title>Activity</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!--===============================================================================================-->
        <!-- <link rel="icon" type="image/png" href="images/icons/favicon.ico"/> -->
        <!--===============================================================================================-->
        <link rel="stylesheet" type="text/css" href="<%=url%>/vendor/bootstrap/css/bootstrap.min.css">
        <!--===============================================================================================-->
        <link rel="stylesheet" type="text/css" href="<%=url%>/fonts-1/font-awesome-4.7.0/css/font-awesome.css">
        <!--===============================================================================================-->
        <link rel="stylesheet" type="text/css" href="<%=url%>/css/main.css">
        <!--===============================================================================================-->
        <link rel="stylesheet" type="text/css" href="<%=url%>/css/style_2.css">
        <!--===============================================================================================-->
    </head>

    <body>

        <div class="limiter">
            <div class="container-profile100">
                <div class="header">
                    <div class="cover-image100">
                        <img src="<%=url%>/logo/logo.png" class="pep-logo" alt="" />
                        <a href="#">
                            <span class="fa fa-bars menu-button" onclick="openMenu()"></span>
                        </a>
                        <a href="<%=url%>/teamlead/notification">
                            <span class="fa fa-bell menu-button">
                                <span class="button__badge" style="display: none;"></span>
                            </span>
                        </a>
                        <nav id="menu">
                            <ul>
                                <% permissions.forEach(element=> { %>
                                    <li><a href="<%=url%>/teamlead<%= element.controller %>/<%=info.uuid%>">
                                            <span class="<%= element.icon%>"></span>
                                            <%= element.permission_name %>
                                        </a>
                                    </li>
                                    <% }); %>
                                        <li><a href="<%=url%>/teamlead/signout"><span class="fa fa-sign-out"></span> Log
                                                Out</a>
                                        </li>
                            </ul>
                            <span class="fa fa-times close-menu" onclick="closeMenu()"></span>
                        </nav>
                    </div>
                    <div class="container salesup">
                        <h2 class="col-12 text-center m-auto">Dashboard</h2></div>
                        
                        <div class="row col-12 text-center m-auto ">
                            <div class="col-6 col-sm-6 col-md-4 col-lg-4 col-xl-4 mt-3  ">
                                <div class="row mb-2">
                                <div class="col-12 text-center m-auto p-1  cardsection ">
                                <%if(profileData.team_L_userProfilePic!== null){%>
                                        <img class="font-size-sm" src="<%=url%>/<%=profileData.team_L_userProfilePic%>">
                                    <% }else{ %>
                                            <img class="font-size-sm" src="<%=url%>/img/Team Lead.jpg">
                                        <% } %>
                                        <h4 class="font-size-sm col-12 text-center m-auto p-0">
                                            <%=profileData.team_L_name%>
                                        </h4>
                                     
                                        <h4 class="mt-2 badge badge-info mb-1 p-2" >
                                            <%=user_role.type_name%>
                                        </h4>
                                        <p class=" mt-2 mb-1 font-size-sm">
                                            <b>Contact:</b>
                                            <%=profileData.team_L_contact%>
                                        </p>

                                        <p class="mb-1 font-size-sm">
                                            <b>Username:</b>
                                            <%=profileData.team_L_username%>
                                        </p>
                                        <p class="mb-1 font-size-sm">
                                            <b>Salary:</b>
                                            <%=profileData.team_L_salary%>
                                        </p>
                                        <p class=" mt-1 font-size-sm text-center" id="memberSince">

                                        </p>        
                            </div>
                            </div>
                            <div class="row mt-2  mb-3 cardsection">
                                <div class="col-12 text-center m-auto p-1  ">
                                    <strong class="font-size-sm p-0">
                                        Company Relevant Information
                                    </strong>
                                    <p class="mb-1 font-size-sm">
                                        <b>Supervisor Name:</b>
                                        <%=profileData.sup_name%>
                                    </p>
                                    <p class="mb-1 font-size-sm">
                                        <b>City Area:</b>
                                        <%=profileData.city_name%>
                                    </p>
        
                                </div>
                            </div>
                        </div> 


                        <div class="col-6 col-sm-6 col-md-8 col-lg-8 col-xl-8 ">
                            <div id="carouselExampleCaptions" class="carousel slide carouselimg_team"
                                data-ride="carousel">
                                <ol class="carousel-indicators">
                                    <% webAds.map((data,index)=>{ %>
                                        <%if(index==0) {%>
                                            <li data-target="#carouselExampleCaptions" data-slide-to="<% index %> "
                                                class="active">
                                            </li>
                                            <% }else{ %>
                                                <li data-target="#carouselExampleCaptions" data-slide-to="<% index %>">
                                                </li>
                                                <% }}) %>

                                </ol>
                                <div class="carousel-inner">
                                    <% webAds.map((data,index)=>{ %>
                                        <%if(index==0) {%>
                                            <div class="carousel-item active p-2">
                                                <img src="<%=url%>/<%=data.picPath%>" class="d-block w-100"
                                                    alt="<%= data.title %>">
                                                <div class="carousel-caption d-none d-md-block">
                                                    <h5 class="font-weight-bolder text-danger">
                                                        <%=data.title %>
                                                    </h5>
                                                    <p class="text-danger">
                                                        <%= data.description %>
                                                    </p>
                                                </div>
                                            </div>
                                            <% }else{ %>
                                                <div class="carousel-item p-2">
                                                    <img src="<%=url%>/<%=data.picPath%>" class="d-block w-100"
                                                        alt="<%= data.title %>">
                                                    <div class="carousel-caption d-none d-md-block">
                                                        <h5 class="font-weight-bolder text-danger">
                                                            <%= data.title %>
                                                        </h5>
                                                        <p class="text-danger">
                                                            <%= data.description %>
                                                        </p>
                                                    </div>
                                                </div>
                                                <% }}) %>
                                </div>
                                <a class="carousel-control-prev text-dark" href="#carouselExampleCaptions" role="button"
                                    data-slide="prev">
                                    <span class="carousel-control-prev-icon bg-dark" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next " href="#carouselExampleCaptions" role="button"
                                    data-slide="next">
                                    <span class="carousel-control-next-icon bg-dark" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                        </div>

            </div>
        </div>
    </div>
    </div>
    </div>
        <!--===============================================================================================-->
        <script src="<%=url%>/vendor/jquery/jquery-3.2.1.min.js"></script>
        <!--===============================================================================================-->
        <script src="<%=url%>/vendor/bootstrap/js/popper.min.js"></script>
        <script src="<%=url%>/vendor/bootstrap/js/bootstrap.min.js"></script>
        <!--===============================================================================================-->
        <script src="<%=url%>/vendor/jquery/tilt.jquery.min.js"></script>
        <script>
            $('.js-tilt').tilt({
                scale: 1.1
            })
            var menu = document.getElementById("menu");
            function openMenu() {
                menu.style.top = "0";
            }
            function closeMenu() {
                menu.style.top = "-100vh";
            }
            var notificationCount = JSON.parse('<%-JSON.stringify(unreadNotificationCount)%>')
            if (notificationCount) {
                $('.button__badge').css('display', 'block')
                $('.button__badge').html(JSON.parse('<%-JSON.stringify(unreadNotificationCount)%>'))
            }

            var profileData = JSON.parse('<%-JSON.stringify(profileData)%>')
            const date = new Date(profileData.createdAt);
            $("#memberSince").html('<b>Member Since: </b>' + date.getFullYear() + '-' + (date.getMonth() + 1) + '-' + date.getDate());
        </script>
        <script>

        </script>
        <!--===============================================================================================-->

    </body>

</html>