  <body>
    <!--  Modal-->
    <div
      class="modal fade"
      id="confirmbox"
      role="dialog"
      aria-hidden="true"
      tabindex="-1"
    >
      <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
          <div class="modal-header">
            <h4 class="modal-title">Decline Reason</h4>
            <button type="button" class="close" data-dismiss="modal">
              &times;
            </button>
          </div>
          <div class="modal-body">
            <input
              type="text"
              class="form-control"
              id="reason"
              placeholder="Give reason for decline."
            />
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary btn-sm"
              data-dismiss="modal"
            >
              Cancel
            </button>
            <button
              type="button"
              class="btn btn-danger btn-sm"
              id="declineRecommendationBTN"
            >
              Decline
            </button>
          </div>
        </div>
      </div>
    </div>
    <!--  Navigation-->
    <div class="limiter">
      <div class="container-profile100">
        <div class="header w-100">
          <div class="cover-image100">
            <img src="<%=url%>/logo/logo.png" class="pep-logo" alt="" />
            <a href="#">
              <span class="fa fa-bars menu-button" onclick="openMenu()"></span>
            </a>
            <a href="<%=url%>/generalManager/notification">
              <span class="fa fa-bell menu-button">
                <span class="button__badge" style="display: none"></span>
              </span>
            </a>
            <nav id="menu">
              <ul>
                <% permissions.forEach(element=> { %>
                <li>
                  <a
                    href="<%=url%>/generalManager<%= element.controller%>/<%=info.uuid%>"
                  >
                    <span class="<%= element.icon%>"></span>
                    <%= element.permission_name %>
                  </a>
                </li>
                <% }); %>
                <li>
                  <a href="<%=url%>/generalManager/signout">
                    <span class="fa fa-sign-out"> </span> Log Out</a
                  >
                </li>
              </ul>
              <span class="fa fa-times close-menu" onclick="closeMenu()"></span>
            </nav>
          </div>
          <!-- --------------------- -->
          <!-- advertisment,
        cityNames, -->
          <!-- --------------------------- -->
          <div class="container salesup">
            <h3 class="col-12 text-center m-auto">Recommendations</h3>

              <div class="col-12 text-right m-auto pt-4">
                <!-- <a
                  href="<%=url%>/generalManager/viewRecommendationsHistory/<%=info.uuid %> "
                  >View Recommendation History</a
                > -->
              </div>

              <div class="table-responsive overflow my-4" >
              <table class="table text-nowrap " id="depositedSlipTable" name="table">
                <thead class="table-primary">
                  <tr>
                    <th scope="col">#</th>
                    <!-- <th scope="col">Supervisor Name</th> -->
                    <th scope="col">Agency Name</th>
                    <th scope="col">Agency City</th>
                    <th scope="col">Gift Name</th>
                    <th scope="col">Team Lead</th>
                    <th scope="col">Team Lead Status</th>
                    <th scope="col">Team Lead Decline Reason</th>
                    <th scope="col">Supervisor</th>
                    <th scope="col">Supervisor Status</th> 
                    <th scope="col">Supervisor Decline Reason</th>
                    <th scope="col">Manager Name</th>
                    <th scope="col">Manager Status</th>
                    <!-- <th scope="col">Manager Decline Reason</th> -->

                    <th scope="col">Create At</th>    
                    <!-- <th scope="col">Action</th> -->
                  </tr>
                </thead>
                <tbody>
                  <% allRecommendations.forEach((element,index) => { %>
                  <tr> 
                    <th scope="row"><%=++index %></th>
                    
                    <td><%= element.Agency_Info.agency_name %></td>
                    <td><%= element.Agency_Info.agency_city %></td>
                    <td><%= element.AdvertismentGift.adver_gift_name %></td>

                    <td><%= element.Team_Lead.team_L_name %></td>
                    <% if (element.team_lead_forward_status) { %>
                      <td style="color: green">Approved</td>
                      <td>------</td>
                      <% } else{%>
                        <td style="color: rgb(250, 79, 0)">Decline</td>
                        <td><%= element.team_lead_decline_descr%></td>
                        <% } %>
                        <td><%= element.Supervisor.sup_name %></td>
                        <% if (element.sup_forward_status) { %>
                          <td style="color: green">Approved</td>
                          <td>------</td>
                          <% } else{%>
                            <td style="color: rgb(250, 79, 0)">Decline</td>
                            <td><%= element.sup_decline_descr%></td>
                            <% } %>
                    <td><%= element.Manager.man_name %></td>

                    <% if (element.mana_approval) { %>
                    <td style="color: green">Approved</td>
                    <% } else{%>
                    <td style="color: rgb(250, 79, 0)">Decline</td>
                    <% } %>

                    <td><%= element.mana_dateTime %></td>

                    <!-- <td>
                      <button
                        class="btn btn-sm btn-success"
                        onclick="approveRecommendation(`<%=element.advert_recom_uuid%>`)"
                      >
                        Approve
                      </button>
                      <button
                        class="btn btn-sm btn-danger"
                        onclick="declineRecommendation(`<%=element.advert_recom_uuid%>`)"
                      >
                        Decline
                      </button>
                    </td> -->
                  </tr>
                  <% }) %>
                </tbody>
             </table>
            </div>
     </div>


        </div>
      </div>
    </div>

    <script src="<%=url%>/vendor/jquery/jquery-3.2.1.min.js"></script>
