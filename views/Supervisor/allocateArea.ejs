<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Assign Area</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!--===============================================================================================-->
    <link
      rel="stylesheet"
      type="text/css"
      href="<%=url%>/vendor/bootstrap/css/bootstrap.min.css"
    />
    <!--===============================================================================================-->
    <link
      rel="stylesheet"
      type="text/css"
      href="<%=url%>/fonts-1/font-awesome-4.7.0/css/font-awesome.css"
    />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="<%=url%>/css/main.css" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="<%=url%>/css/style_2.css" />
    <link
      rel="stylesheet"
      type="text/css"
      href="<%=url%>/toastr/toastr.min.css"
    />
    <!--===============================================================================================-->
  </head>

  <body>
    <!--  Navigation-->
    <div class="limiter">
      <div class="container-profile100">
        <div class="header">
          <div class="cover-image100">
            <img src="<%=url%>/logo/logo.png" class="pep-logo" alt="" />
            <a href="#">
              <span class="fa fa-bars menu-button" onclick="openMenu()"></span>
            </a>
            <a href="<%=url%>/supervisor/notification">
              <span class="fa fa-bell menu-button">
                <span class="button__badge" style="display: none"></span>
              </span>
            </a>
            <nav id="menu">
              <ul>
                <% permissions.forEach(element=> { %>
                <li>
                  <a
                    href="<%=url%>/supervisor<%= element.controller%>/<%=info.uuid%>"
                  >
                    <span class="<%= element.icon%>"></span>
                    <%= element.permission_name %>
                  </a>
                </li>
                <% }); %>
                <li>
                  <a href="<%=url%>/supervisor/signout">
                    <span class="fa fa-sign-out"> </span> Log Out</a
                  >
                </li>
              </ul>
              <span class="fa fa-times close-menu" onclick="closeMenu()"></span>
            </nav>
          </div>
          <!-- --------------------- -->
          <div class="container saleup">
            <h3 class="text-center mb-2">Allot City Area to Team Lead</h3>

            <div class="container p-2 mt-4">
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mt-3">Area</h6>
                </div>
                <div class="col-sm-6 mb-2">
                  <select
                    id="area"
                    class="area w-100 h-100 p-2"
                    placeholder="Select Area"
                  >
                    <%areaSectors.forEach(area =>{ %>
                    <option value="<%=area.city_area_uuid%>" class="p-2">
                      <%= area.city_name %>
                      <strong>(<%= area.city_code %>)</strong>
                    </option>
                    <% }) %>
                  </select>
                </div>
              </div>

              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mt-3">Select Team Lead</h6>
                </div>
                <div class="col-sm-6">
                  <select
                    id="employees"
                    class="area w-100 h-100 p-2"
                    placeholder="Select Team Lead"
                  >
                    <%allTeamLeads.forEach(teamLead =>{ %>
                    <option value="<%=teamLead.team_L_uuid%>">
                      <%= teamLead.team_L_name %>
                    </option>
                    <% }) %>
                  </select>
                </div>
                <div class="col-12">
                  <input
                    type="submit"
                    value="Allot Area"
                    class="w-25 allot_btn"
                    id="allotarea"
                  />
                </div>
              </div>
            </div>
          </div>

          <div class="container mt-5">
            <% if(!allTeamLeads) { %>
            <div class="text-center p-3 text-danger mt-5">
              <h5>You don't have any Team.</h5>
              <h5>Please build a team first.</h5>
            </div>
            <% }else{ %>

            <table class="table">
              <thead class="thead-light">
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Name</th>
                  <th scope="col">Contact</th>
                  <th scope="col">Current Area</th>
                </tr>
              </thead>
              <tbody>
                <% allTeamLeads.forEach((element,index) => { %>
                <tr>
                  <td scope="col"><strong> <%= ++index %> </strong></td>
                  <td scope="col"><%=element.team_L_name %></td>
                  <td scope="col"><%=element.team_L_contact %></td>

                  <td scope="col">
                    <% teamMember.forEach(member => { %>
                    <%if(element.team_L_uuid=== member.team_L_uuid ){%>
                    <ul class="list-group">
                      <!-- %member.City_Sectors.forEach(area => {%> -->
                      <li
                        class="
                          list-group-item
                          d-flex
                          justify-content-between
                          align-items-center
                        "
                      >
                        <%=member.City_Area.city_name %>
                        <span
                          class="badge badge-danger badge-pill"
                          style="cursor: pointer"
                          onclick="deleteArea('<%=member.City_Area.city_area_uuid%>','<%=member.team_L_uuid%>')"
                        >
                          <i class="fa fa-times" aria-hidden="true"></i
                        ></span>
                      </li>

                      <!-- % }) %> -->
                    </ul>

                    <%} })%>
                  </td>
                </tr>
                <% }) %>
              </tbody>
            </table>
            <%} %>
          </div>
          <!-- ---------------- -->
        </div>
      </div>
    </div>

    <!--===============================================================================================-->
    <script src="<%=url%>/js/jquery.min.js"></script>
    <script src="<%=url%>/bootstrap/js/bootstrap.min.js"></script>
    <!-- Toastr -->
    <!--===============================================================================================-->
    <script src="<%=url%>/vendor/jquery/tilt.jquery.min.js"></script>
    <script src="<%=url%>/toastr/toastr.min.js"></script>

    <script>
      var notificationCount = JSON.parse(
        "<%-JSON.stringify(unreadNotificationCount)%>"
      );
      if (notificationCount) {
        $(".button__badge").css("display", "block");
        $(".button__badge").html(
          JSON.parse("<%-JSON.stringify(unreadNotificationCount)%>")
        );
      }
      $(".js-tilt").tilt({
        scale: 1.1,
      });

      var menu = document.getElementById("menu"),
        allTeamLeads = JSON.parse(`<%-JSON.stringify(allTeamLeads)%>`),
        teamMember = JSON.parse(`<%-JSON.stringify(teamMember)%>`);
      function openMenu() {
        menu.style.top = "0";
      }
      function closeMenu() {
        menu.style.top = "-100vh";
      }

      //function to check if the user is already have the same area then prevent it

      const checkUserArea = (dbData, selectedArea, employeeUUID) => {
        var employeesSelected = [],
          status = false;

        for (const data of dbData) {
          if (data.team_L_uuid === employeeUUID) {
            if (selectedArea === data.City_Area.city_area_uuid) {
              status = true;
            }
          }
        }
        return status;
      };

      $("#allotarea").click(() => {
        var selectedArea = document.getElementById("area").value,
          employees = $("#employees").find(":selected").val();

        let checkUserExists = false;
        if (employees)
          checkUserExists = checkUserArea(teamMember, selectedArea, employees);
        else {
          toastr.error("Please select employee");
          return;
        }
        if (checkUserExists) {
          toastr.error("Area is already allot to the user.");
          return;
        } else {
          $.ajax({
            type: "POST",
            url: `${window.location.origin}/allocateAreaToTeamLead/<%=info.uuid%>`,
            data: { selectedArea, employees },
            dataType: "json",
            error: (error) => {
              if (error) {
                console.error(error);
                toastr.error("There is an error while Allocating Area");
              }
            },
            success: (response) => {
              if (response) {
                console.log(response);
                toastr.success("Area Allocated to the Employees ");
                location.reload(true);
              }
            },
          });
        }
      });

      const deleteArea = (selectedArea, executiveUUID) => {
        console.log(selectedArea);
        console.log(executiveUUID);
        $.ajax({
          type: "PUT",
          url: `${window.location.origin}/supervisor/removeAreaofTeamLead`,
          data: { selectedArea, executiveUUID },
          dataType: "json",
          error: (error) => {
            console.error(error);
            toastr.error(error.error);
          },
          success: (response) => {
            if (response.status === "success") toastr.success(response.message);
            else toastr.warning("Sector is already marked deleted");
          },
        });
      };
    </script>
  </body>
</html>
